<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HorizontalActivities.FridgeActivity">

    <TextView
        android:id="@+id/fridge_cate_top_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skyblue"
        android:padding="20dp"
        android:paddingStart="70dp"
        android:text="Refrigerators"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/back_frige_activity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:src="@drawable/ic_back_24" />
    <TextView
        android:id="@+id/fridge_cate_head_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Brands for Refrigerators"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@+id/fridge_cate_top_txt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/fridge_cate_head_below_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Brand and start your refrigerator exploration."
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_below="@+id/fridge_cate_head_txt"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp" />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/RefreshLayout"
        android:layout_below="@+id/fridge_cate_head_below_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/fridge_cate_head_below_txt"
        android:scrollbars="none">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:rowCount="5"
            android:columnCount="2"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/lg_product_frige"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <!-- Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_border_bg" />
                <ImageView
                    android:id="@+id/lg_img_databs_load"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="40dp" />
                <ProgressBar
                    android:id="@+id/frige_lg_progressbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/whirlpool_product_frige"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <!-- Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_border_bg" />
                <ImageView
                    android:id="@+id/whirlpool_img_databs_load"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="70dp" />
                <ProgressBar
                    android:id="@+id/frige_whirlpool_progressbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/samsung_product_frige"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <!-- Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_border_bg" />
                <ImageView
                    android:id="@+id/samsung_img_databs_load"
                    android:layout_width="125dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"/>
                <ProgressBar
                    android:id="@+id/frige_samsung_progressbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/godrej_product_frige"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <!-- Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_border_bg" />
                <ImageView
                    android:id="@+id/godrej_img_databs_load"
                    android:layout_width="110dp"
                    android:layout_gravity="center"
                    android:layout_height="110dp" />
                <ProgressBar
                    android:id="@+id/frige_godrej_progressbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/haier_product_frige"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <!-- Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_border_bg" />
                <ImageView
                    android:id="@+id/haier_img_databs_load"
                    android:layout_width="130dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp" />
                <ProgressBar
                    android:id="@+id/frige_haier_progressbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</RelativeLayout>