<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_14"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/img"
        android:layout_marginTop="20dp"
        android:layout_marginStart="70sp"
        android:padding="10dp" />
    <TextView
        android:id="@+id/username_side_navigation"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:layout_marginTop="-38dp"
        android:textSize="13dp" />
    <TextView
        android:id="@+id/email_id_side_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text=""
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="-30dp"
        android:textSize="13dp" />
    <View
        android:layout_width="290dp"
        android:layout_marginStart="20dp"
        android:layout_height="1dp"
        android:background="@color/black" />
    <LinearLayout
        android:id="@+id/home_side_navigate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="18dp"
            android:src="@drawable/round_home_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="15sp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="-20dp"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/categories_side_navigate"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="18dp"
            android:src="@drawable/round_categories_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="15sp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="-20dp"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/settings_side_navigate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical" >
    </LinearLayout>
    <View
        android:layout_width="290dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:background="#919191" />

    <LinearLayout
        android:id="@+id/contact_us_side_navigate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="18dp"
            android:src="@drawable/baseline_contact_mail_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Contact us"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="15sp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="-20dp"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/about_us_side_navigate"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="18dp"
            android:src="@drawable/about_us_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="About us"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="15sp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="-20dp"
            android:textColor="@color/black" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0"
        android:padding="20dp"
        android:textStyle="bold"
        android:layout_marginStart="185dp"
        android:layout_marginTop="270dp"
        android:textColor="@color/black" />

</LinearLayout>