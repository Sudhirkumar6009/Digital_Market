<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FEFE"
    tools:context=".DiscountProducts.DiscountTvActivity">

    <ImageView
        android:id="@+id/tv_discount_img_page"
        android:layout_width="257dp"
        android:layout_height="182dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="68dp"
        android:src="@raw/discount_img_tv" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="270dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="21dp"
        android:src="@raw/tv_discount" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_dis_tv_pg"
        android:layout_below="@id/tv_discount_img_page"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:text="Brand: SAMSUNG"
        android:textSize="15dp"
        android:textColor="@color/skyblue"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_dis_tv_pg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_below="@id/tv_dis_tv_pg"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Samsung 108 cm (43 inches) 4K Ultra HD Smart LED TV UA43BU8570ULXL (Black)"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:backgroundTint="@color/skyblue">
                <TextView
                    android:layout_width="200dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:background="@color/skyblue"
                    android:text="Discount Offer Sale"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-35%"
                android:textSize="20dp"
                android:textColor="#FD0000"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:padding="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42,490"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="40dp"
                android:layout_marginStart="95dp"
                android:layout_marginTop="-58dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginStart="85dp"
                android:layout_marginTop="-47dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M.R.P.:"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/strike_tv_discount"
                android:layout_height="wrap_content"
                android:text="₹64,900"
                android:textSize="20dp"
                android:layout_marginStart="85dp"
                android:layout_marginTop="-27dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"
                android:layout_marginTop="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descriptions of this item"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:textSize="20dp" />
            <View
                android:layout_width="360dp"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:background="@color/black"
                android:layout_marginTop="5dp" />
            <TextView
                android:id="@+id/bulletedTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:textStyle="normal"
                android:paddingEnd="15dp"
                android:textSize="18dp"
                android:textColor="#1C1C1C"
                android:text=""
                android:autoLink="web" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>