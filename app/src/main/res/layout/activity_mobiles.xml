<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HorizontalActivities.MobilesActivity">

    <TextView
        android:id="@+id/mobile_cate_top_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skyblue"
        android:padding="20dp"
        android:paddingStart="70dp"
        android:text="Mobile"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/back_mobiles_activity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:src="@drawable/ic_back_24" />
    <TextView
        android:id="@+id/mobile_cate_head_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Brands for Mobile"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@+id/mobile_cate_top_txt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/mobile_cate_head_below_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Brand and start your mobile exploration."
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_below="@+id/mobile_cate_head_txt"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp" />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/RefreshLayout"
        android:layout_below="@+id/mobile_cate_head_below_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/mobile_cate_head_below_txt"
        android:scrollbars="none">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:rowCount="5"
            android:columnCount="2"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/samsung_product_mobile"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <!-- Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_border_bg" />
                <ImageView
                    android:id="@+id/samsung_img_databs_load"
                    android:layout_width="140dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="55dp"
                    android:layout_height="30dp" />
                <ProgressBar
                    android:id="@+id/mobile_samsung_progressbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/oneplus_product_mobile"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <!-- Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_border_bg" />
                <ImageView
                    android:id="@+id/oneplus_img_databs_load"
                    android:layout_width="125dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent" />
                <ProgressBar
                    android:id="@+id/mobile_oneplus_progressbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/oppo_product_mobile"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <!-- Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_border_bg" />
                <ImageView
                    android:id="@+id/oppo_img_databs_load"
                    android:layout_width="135dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"/>
                <ProgressBar
                    android:id="@+id/mobile_oppo_progressbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/vivo_product_mobile"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <!-- Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_border_bg" />
                <ImageView
                    android:id="@+id/vivo_img_databs_load"
                    android:layout_width="135dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="35dp"
                    android:layout_height="65dp"/>
                <ProgressBar
                    android:id="@+id/mobile_vivo_progressbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
            android:id="@+id/mi_product_mobile"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <!-- Border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border_bg" />
            <ImageView
                android:id="@+id/mi_img_databs_load"
                android:layout_width="90dp"
                android:layout_gravity="center"
                android:layout_height="90dp" />
                <ProgressBar
                    android:id="@+id/mobile_mi_progressbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/apple_product_mobile"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <!-- Border -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_border_bg" />
                <ImageView
                    android:id="@+id/apple_img_databs_load"
                    android:layout_width="110dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-2dp"
                    android:layout_marginStart="-3dp"
                    android:layout_height="110dp"/>
                <ProgressBar
                    android:id="@+id/mobile_apple_progressbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</RelativeLayout>