<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoriesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-44dp"
        android:layout_marginLeft="-40dp"
        android:layout_marginRight="-40dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/img_7" />
        <TextView
            android:id="@+id/laptops_cate_top_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skyblue"
            android:padding="20dp"
            android:paddingStart="70dp"
            android:text="Categories"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/back_laptops_activity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/ic_back_24" />

        <TextView
        android:id="@+id/laptops_cate_head_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Electronics Products"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@+id/laptops_cate_top_txt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/laptops_cate_head_below_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Products and start exploration via selecting best brands."
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_below="@+id/laptops_cate_head_txt"
            android:layout_marginStart="22dp"
            android:layout_marginTop="5dp" />
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/RefreshLayout_categories"
            android:layout_below="@+id/laptops_cate_head_below_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@id/laptops_cate_head_below_txt"
        android:rowCount="5"
        android:columnCount="2"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/laptops_cate"
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <!-- Border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border_bg" />
            <ImageView
                android:id="@+id/laptops_img_databs_load"
                android:layout_width="match_parent"
                android:layout_gravity="top|center"
                android:padding="10dp"
                android:layout_height="140dp" />
            <TextView
                android:id="@+id/laptops_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingBottom="13dp" />
            <ProgressBar
                android:id="@+id/laptops_progressbar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/tv_cate"
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <!-- Border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border_bg" />
            <ImageView
                android:id="@+id/tv_img_databs_load"
                android:layout_width="match_parent"
                android:layout_gravity="top|center"
                android:padding="5dp"
                android:layout_height="140dp" />
            <TextView
                android:id="@+id/tv_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingBottom="13dp" />
            <ProgressBar
                android:id="@+id/tv_progressbar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/mobiles_cate"
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <!-- Border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border_bg" />
            <ImageView
                android:id="@+id/mobiles_img_databs_load"
                android:layout_width="match_parent"
                android:layout_gravity="top|center"
                android:padding="15dp"
                android:layout_height="140dp"/>

            <TextView
                android:id="@+id/mobiles_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingBottom="13dp" />
            <ProgressBar
                android:id="@+id/mobile_progressbar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/frige_cate"
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <!-- Border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border_bg" />
            <ImageView
                android:id="@+id/frige_img_databs_load"
                android:layout_width="match_parent"
                android:layout_gravity="top|center"
                android:padding="10dp"
                android:layout_height="140dp"/>
            <TextView
                android:id="@+id/frige_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingBottom="13dp" />
            <ProgressBar
                android:id="@+id/frige_progressbar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/w_m_cate"
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <!-- Border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border_bg" />
            <ImageView
                android:id="@+id/w_m_img_databs_load"
                android:layout_width="match_parent"
                android:layout_gravity="top|center"
                android:padding="18dp"
                android:layout_height="140dp" />
            <TextView
                android:id="@+id/w_m_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="7dp" />
            <ProgressBar
                android:id="@+id/w_m_progressbar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/accessories_cate"
            android:layout_width="180dp"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">

            <!-- Border -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border_bg" />
            <ImageView
                android:id="@+id/accessories_img_databs_load"
                android:layout_width="match_parent"
                android:layout_gravity="top|center"
                android:paddingEnd="5dp"
                android:paddingStart="10dp"
                android:paddingTop="-15dp"
                android:paddingBottom="-10dp"
                android:layout_height="140dp" />
            <TextView
                android:id="@+id/accessories_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:paddingBottom="13dp" />
            <ProgressBar
                android:id="@+id/accessories_progressbar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>
    </GridLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>